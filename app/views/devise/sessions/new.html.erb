<div class="row">
<div class="col-sm-12 col-md-6 col-md-offset-3">
<h2 class="text-center">Log in</h2><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: 'E-Mail', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
<br>
<p>New User?<%= render "devise/shared/links" %></p>
</div>
</div>