<!DOCTYPE html>
<html>
<head>
  <title>Yelpdemo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>
<div class="container">
<% flash.each do |key, value| %>
<% if value.is_a?(String) %>
   <div class="alert alert-<%= key == "notice" ? "success" : "danger" %> alert-dismissable"><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">close</span></button>
   <%= content_tag :div, value, id: "flash_#{key}" %>
    </div>
  <% end %>
  <% end %>
<%= yield %>
<%= render 'layouts/footer' %>
</div>

</body>
</html>
